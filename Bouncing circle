float xPosition = 0;
float yPosition;
float xSpeed = 3;
float ySpeed = 3;

void setup(){
size(450,350);
smooth();
noStroke();
yPosition = height/2;
}

void draw(){
background(0);

if(xPosition>width){
xSpeed = -3; 
}

if(xPosition<0){
xSpeed = 3; 
}

fill(0,20,220);
ellipse(xPosition,yPosition,50,50);
xPosition += xSpeed; 
}
